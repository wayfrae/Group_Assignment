<Window
    x:Class="Group_Assignment.wndMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Group_Assignment"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Invoice"
    Style="{StaticResource CustomWindow}"    
    mc:Ignorable="d">

    <materialDesign:DialogHost>
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel MinWidth="212">
                    <ToggleButton
                        Margin="16"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Top"
                        IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                    <StackPanel>
                        <MenuItem Header="Edit Items" Click="MenuItemUpdateItems_Click"/>
                        <MenuItem Header="Search" Click="MenuItemSearch_Click" />
                    </StackPanel>
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>
            <DockPanel>
                <materialDesign:ColorZone Style="{StaticResource TopMenuBar}">
                    <DockPanel>
                        <ToggleButton
                            x:Name="MenuToggleButton"
                            IsChecked="False"
                            Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="22">
                            The Jewelry Company Invoice
                        </TextBlock>
                    </DockPanel>
                </materialDesign:ColorZone>
                <Grid x:Name="GridMain">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="76"/>
                        <RowDefinition/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource MaterialDesignTitleTextBlock}"
                               Margin="10">
                               Invoice Number
                    </TextBlock>
                    <TextBlock 
                        Grid.Row="0"
                        Margin="5,30,396.333,0"
                        Style="{StaticResource MaterialDesignDisplay2TextBlock}" 
                        Text="{Binding CurrentInvoice.Number, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2" />
                    <DatePicker Style="{StaticResource DatePicker}" 
                                Text="{Binding CurrentInvoice.Date, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,0,10" 
                                />
                    <materialDesign:Card 
                        Grid.ColumnSpan="2"
                        Grid.Row="2"
                        VerticalAlignment="Stretch" Margin="10,10,10.333,10.333">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="{Binding Parent.ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}">
                            <StackPanel>
                                <TextBlock>Order Summary</TextBlock>
                                <DataGrid
                                    IsEnabled="False"
                                    PreviewKeyUp="DataGridOrderSummary_PreviewKeyUp"
                                    CellEditEnding="DataGridOrderSummary_CellEditEnding"
                                    IsSynchronizedWithCurrentItem="False"                                    
                                    Style="{StaticResource InvoiceDataGrid}"
                                    x:Name="DataGridOrderSummary"                                    
                                    ItemsSource="{Binding CurrentInvoice.LineItems, UpdateSourceTrigger=PropertyChanged}"
                                    AddingNewItem="DataGridOrderSummary_AddingNewItem"
                                    >
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Delete" Click="MenuItem_Click">
                                                <MenuItem.Icon>
                                                    <materialDesign:PackIcon Kind="Delete" />
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                    <DataGrid.Columns>
                                        <materialDesign:MaterialDataGridTextColumn
                                            x:Name="CellPosition"
                                            Binding="{Binding Position, UpdateSourceTrigger=PropertyChanged}"
                                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"
                                            Header="#"
                                            IsReadOnly="True"                                             
                                            />
                                        <materialDesign:MaterialDataGridComboBoxColumn
                                            x:Name="ComboBoxItems"
                                            MinWidth="500"
                                            Header="Description"                                            
                                            SelectedValueBinding="{Binding ItemOnLine, UpdateSourceTrigger=PropertyChanged}" 
                                            TextBinding="{Binding ItemOnLine.Description, UpdateSourceTrigger=PropertyChanged}" />

                                        <materialDesign:MaterialDataGridTextColumn
                                            Binding="{Binding ItemOnLine.PriceString, UpdateSourceTrigger=PropertyChanged}"
                                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"
                                            Header="Price"
                                            IsReadOnly="True" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </ScrollViewer>

                    </materialDesign:Card>
                    <materialDesign:PopupBox Margin="0,20,20.333,0">
                        <StackPanel>
                            <Button 
                                x:Name="ButtonNewInvoice"
                                ToolTip="Create new invoice"
                                Click="NewInvoice_Click">
                                <materialDesign:PackIcon Kind="Plus" />
                            </Button>

                            <Button Name="ButtonEditInvoice" ToolTip="Edit current invoice">
                                <ToggleButton 
                                    Name="EditInvoice"                                
                                    Click="EditInvoice_Click"
                                    Style="{StaticResource EditSaveToggle}">
                                    <ToggleButton.Content>
                                        <materialDesign:PackIcon Kind="Pencil"/>
                                    </ToggleButton.Content>
                                    <materialDesign:ToggleButtonAssist.OnContent>
                                        <materialDesign:PackIcon Kind="ContentSave"/>
                                    </materialDesign:ToggleButtonAssist.OnContent>
                                </ToggleButton>
                            </Button>

                            <Button ToolTip="Delete invoice">
                                <materialDesign:PackIcon Kind="Delete" />
                            </Button>
                        </StackPanel>
                    </materialDesign:PopupBox>
                    <TextBlock 
                        Style="{StaticResource TotalDisplay}"
                        Text="{Binding CurrentInvoice.Total, UpdateSourceTrigger=PropertyChanged}" />

                </Grid>

            </DockPanel>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</Window>
